<%= render "shared/head" %>
    <div class="container">
        <h3 class="text-center">Add a New Book Title and Review</h3>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form action="/books" method="POST">
                    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                    <div class="form_group">
                        <label>Book Title</label>
                        <input class="form-control" name="bookInfo[title]" placeholder="Enter book title">
                    </div>
                    <br>
                    <div class="form_group">
                        <label>Author</label>
                        <small id="authordHelp" class="form-text text-muted pb-2">* Please choose "Other" if you want to add new author</small>
                        <p class="pl-5">Choose from the existing authors: 
                            <select class="form-control" name="bookInfo[existing_author]">
                                <option value="-1">Other</option>
                            <% if @authors%>
                                <% for author in @authors %>
                                <option value="<%= author.id %>"><%= author.name %></option>
                                <% end %>
                            <% end %>
                            </select>
                        </p>
                        <p class="pl-5">Or add a new author: 
                            <input class="form-control" name="bookInfo[new_author]">
                        </p>
                    </div>
                    <div class="form_group">
                        <label>Review</label>
                        <textarea class="form-control" rows="5" name="bookInfo[review]"></textarea>
                    </div>
                    <br>
                    <div class="form_group">
                        <p>Rating: 
                            <select name="bookInfo[rating]">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3" selected>3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        star(s) </p>
                    </div>
                    <br>
                    <button class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>